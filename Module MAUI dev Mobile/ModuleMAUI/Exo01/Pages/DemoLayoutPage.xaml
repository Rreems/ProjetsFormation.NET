<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exo01.Pages.DemoLayoutPage"
             Title="DemoLayoutPage">

    <!--Affichage-->
    <FlyoutPage.Flyout>
        <ContentPage Title="Page A"
                     BackgroundColor="Red">

            <VerticalStackLayout>
                <Label 
            Text="Welcome to .NET MAUI! Un super monde hein, vraiment le fun."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            </VerticalStackLayout>

        </ContentPage>
    </FlyoutPage.Flyout>

    <!--Menu latéral-->
    <FlyoutPage.Detail>
        <ContentPage
            Title="Menu latéral"
            BackgroundColor="Aquamarine">
            
        </ContentPage>
    </FlyoutPage.Detail>



</FlyoutPage>