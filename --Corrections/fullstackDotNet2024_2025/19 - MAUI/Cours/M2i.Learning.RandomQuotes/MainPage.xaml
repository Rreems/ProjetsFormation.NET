<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M2i.Learning.RandomQuotes.MainPage">

    <Grid RowDefinitions="4*, *" Padding="20">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1, 1">
                <GradientStop x:Name="grdStart" Color="Green" Offset="0.1" />
                <GradientStop x:Name="grdEnd" Color="Red" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lblQuote" Grid.Row="0" Grid.Column="0" FontFamily="Bison" FontSize="40" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="Citation - Author" />
        <Button x:Name="btnRdnQuote" Clicked="btnRdnQuote_Clicked" Grid.Row="1" Grid.Column="0" Text="Get new quote?" FontSize="24" BackgroundColor="#B0000000" />
    </Grid>

</ContentPage>
