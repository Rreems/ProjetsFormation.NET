             x:Class="M2i.Teaching.Basics.Pages.DemoFlyoutPage"
             Title="DemoFlyoutPage">
    <!--Menu Latéral-->
    <FlyoutPage.Flyout>
        <ContentPage BackgroundColor="Blue">
            <Label Text="Partie Détail" />
        </ContentPage>
    </FlyoutPage.Flyout>
    
    <!--Affichage-->
