<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M2i.Learning.RessourcesExt.MainPage">

    <ScrollView>
        <Grid RowDefinitions="*, *, *, *" ColumnDefinitions="*, *, *" RowSpacing="10" ColumnSpacing="10">
            <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                <Image Source="dotnet_bot.png" />
                <Label Text="dotnet_bot.png" FontFamily="Seven Moon.ttf" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                <Image Source="dotnet_bot" />
                <Label Text="dotnet_bot" FontFamily="Moon"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="0" Grid.Column="2">
                <Image Source="cat1.jpg" />
                <Label Text="cat1.jpg" FontFamily="Moon"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                <Image Source="cat2.gif" IsAnimationPlaying="True" />
                <Label Text="cat2.gif" FontFamily="Moon"/>
            </VerticalStackLayout>

            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" x:Name="lblIngredient" Text="Ingrédient" />
        </Grid>
    </ScrollView>

</ContentPage>
